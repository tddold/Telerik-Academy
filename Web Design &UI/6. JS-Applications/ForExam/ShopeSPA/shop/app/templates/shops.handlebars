<h1>Shops here!</h1>

<table class="table">
  <tfoot>
    <tr>
      <td>
        <input id="tb-shop-name"/>
        <button id="btn-add-shop" class="btn btn-default">Add+</button>
      </td>
    </tr>
  </tfoot>
  <tbody>
    {{#shops}}
      <tr data-shop-id = "{{id}}">
        <td>
          {{name}}
        </td>
        <td>
          <a href="#/shops/{{id}}" id="btn-info-shop" class="btn btn-info">Info</a>
          {{#if iAmOwner}}
          <button id="btn-remove-shop" class="btn btn-danger">Remove</button>
          {{/if}}
        </td>
      </tr>
    {{/shops}}
  </tbody>
</table>
